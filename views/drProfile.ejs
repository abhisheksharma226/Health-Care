    <!-- FOR UPLOADING PROFILE PHOTO -->
    <script>
        // JavaScript to handle profile picture upload and preview
        document.addEventListener('DOMContentLoaded', function () {
            const profilePictureInput = document.getElementById('profilePictureInput');
            const profilePicturePreview = document.getElementById('profilePicturePreview');
    
            profilePictureInput.addEventListener('change', function () {
                const file = this.files[0];
                if (file) {
                    // Create a FormData object and append the file to it
                    const formData = new FormData();
                    formData.append('profilePicture', file);
    
                    // Send the FormData object to the server using fetch or XMLHttpRequest
                    fetch('/uploadProfilePicture', {
                        method: 'POST',
                        body: formData
                    })
                    .then(response => response.json())
                    .then(data => {
                        // Update the profile picture preview with the uploaded image URL
                        profilePicturePreview.src = data.imageUrl;
                    })
                    .catch(error => console.error('Error uploading profile picture:', error));
                }
            });
    
            // Reset button functionality
            const resetProfilePicture = document.getElementById('resetProfilePicture');
            resetProfilePicture.addEventListener('click', function () {
                // Reset the input field and profile picture preview
                profilePictureInput.value = null;
                profilePicturePreview.src = 'https://bootdey.com/img/Content/avatar/avatar1.png';
            });
        });
    </script>
