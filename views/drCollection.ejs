<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration Form</title>
    <link rel="stylesheet" href="/patientCollections.css">
</head>

<body>
    <div class="container">
        <div class="form-box">
            <form id="registration-form" action="/doctor/drCollection" method="post">
                <div class="heading">
                    <h1>Registration Form</h1>
                </div>
                <!-- Personal Details Section -->
                <div class="form-section">
                    <p>Personal Details</p>
                    <div class="container2">
                        <div class="inc">
                            <label for="full-name">Full Name:</label>
                            <input type="text" id="fullName" name="fullName" required placeholder="Full Name">
                        </div>
                        <div class="inc">
                            <label for="dob">Date of Birth:</label>
                            <input type="date" id="dob" name="dob" required>
                        </div>
                        <div class="inc">
                            <label for="email">Email:</label>
                            <input type="email" id="email" name="email" required placeholder="example@email.com">
                        </div>
                        <div class="inc">
                            <label for="mobile">Mobile Number:</label>
                            <input type="tel" id="mobile" name="mobile" required placeholder="Mobile Number">
                        </div>
                        <div class="inc">
                            <label for="gender">Gender:</label>
                            <select name="gender" id="gender">
                                <option value="">Select</option>
                                <option value="male">Male</option>
                                <option value="female">Female</option>
                                <option value="other">Other</option>
                            </select>
                        </div>
                      
                    </div>
                </div>
                
                <!-- Submit Button -->
                <div class="submit-container">
                    <button type="submit">Submit</button>
                </div>
            </form>
        </div>
    </div>
</body>

</html>
